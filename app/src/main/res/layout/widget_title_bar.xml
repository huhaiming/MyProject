<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bkg"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white">

    <!-- 左边 -->

    <TextView
        android:id="@+id/tbLeftText"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/margin_20"
        android:gravity="center"
        android:text="文字"
        android:textSize="@dimen/textSize_16" />

    <ImageView
        android:id="@+id/tbLeftImg"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_20"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/tbBackImg"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:src="@mipmap/back" />
    </LinearLayout>

    <!-- 中间 -->

    <TextView
        android:id="@+id/tbTitle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/color333333"
        android:textSize="@dimen/textSize_20" />

    <LinearLayout
        android:id="@+id/tbDynamicTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tbDynamicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="内容内容"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize_18" />

        <ImageView
            android:id="@+id/tbDynamicTitleArrow"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@mipmap/home_arrow" />
    </LinearLayout>

    <!-- 右边 -->

    <TextView
        android:id="@+id/tbRightText"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="center"
        android:text="文字"
        android:textColor="@color/color333333"
        android:textSize="@dimen/textSize_16" />

    <ImageView
        android:id="@+id/tbRightImg"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:scaleType="center" />

</RelativeLayout>